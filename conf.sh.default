#!/usr/bin/env bash

main() {
    SCRIPTDIR=$(cd $(dirname $BASH_SOURCE[0]) && pwd)
    source $SCRIPTDIR/dscripts/conf_lib.sh  # load library functions
    set_volume_root
    set_image_and_container_name
    set_image_signature_args
    set_run_args
    set_vol_mapping
    enable_x11_client
    enable_pkcs11
}


set_volume_root() {
    DOCKERVOL_ROOT='/root/dv'
    if [ "$TRAVIS" == "true" ]; then
        DOCKERVOL_ROOT='./dv';
        DOCKERLOG_ROOT='./dl';
    fi
}


set_image_and_container_name() {
    # This IMGID qualifies image, container, user and IP adddress; this is helpful for managing
    # processes on the docker host etc.
    IMGID=''
    PROJSHORT='keymgmt-safenetac'
    export IMAGENAME="rhoerbe/$PROJSHORT${IMGID}"  # [a-z_0-9]
    export CONTAINERNAME="${IMGID}$PROJSHORT"
    export DOCKER_REGISTRY='index.docker.io'
}


set_image_signature_args() {
    export DIDI_SIGNER='rh@identinetics.com'  # PGP uid
    export GPG_SIGN_OPTIONS='--default-key 904F1906'
}


set_run_args() {
    enable_pkcs11
    export ENVSETTINGS="-e PKCS11_CARD_DRIVER=/usr/lib64/libetvTokenEngine.so"  # Safenet eTokenPro
    export ENVSETTINGS="$ENVSETTINGS -e USERPIN=Secret.1"  # configure user password
    export ENVSETTINGS="$ENVSETTINGS -e SOPIN=Secret.2"  # configure admin password
    export STARTCMD='/scripts/start.sh'
}


set_vol_mapping() {
    VOLLIST=''
    VOLMAPPING=''
    mount_ramdisk
    map_docker_volume "${CONTAINERNAME}.root" '/root' 'Z' $DOCKERVOL_ROOT
}


mount_ramdisk() {
    RAMDISKPATH="${DOCKERVOL_ROOT}/${CONTAINERNAME}/ramdisk"
    df -Th | tail -n +2 | egrep "tmpfs|ramfs" >/dev/null | awk '{print $7}'| grep ${RAMDISKPATH}
    if (( $? != 0 )); then # ramfs not mounted at $RAMDISKPATH
        $sudo mkdir -p ${RAMDISKPATH}/ramdisk
        $sudo mount -t tmpfs -o size=1M tmpfs ${RAMDISKPATH}  # TODO tmpfs -> ramfs
        cd ${RAMDISKPATH}
        [[ $PWD != "$RAMDISKPATH" ]] && zenity --error --text "could not make or mount ${RAMDISKPATH}" && exit 1
        echo "Created ramdisk at ${RAMDISKPATH} (no size limit imposed - using up available RAM will freeze your system!)"
    fi
}


main "$@"
